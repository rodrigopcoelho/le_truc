<div class="main-container-show">

  <div class="header-product-show">
    <h1><%= @product.name %></h1>

    <%= render 'product_category_pill',  product: @product %>
  </div>

  <div class="description-product-container">

    <div class="left-container">

      <div class="image-product cont">
        <%= cl_image_tag @product.photo.key, crop: :fill %>
      </div>

      <div class="info-product cont">
        <p>
          <%= @product.description %>
        </p>
      </div>

    </div>

    <div class="right-container">

      <div class="nice-phrase cont">
        <h2>Use the <%= @product.name %> as you want!</h2>
      </div>

      <div class="schedule-form cont" data-controller="toggle">

        <p class="product-price"><%= @product.price %> ðŸ’°</p>

        <%= simple_form_for @booking do |f| %>
          <div class="d-flex flex-column px-5 mb-2">
              <%= f.association :slot,
                  as: :check_boxes,
                  input_html: { class: "tag-selector", data: { action: "click->toggle#toggleChanged", toggle_target: "toggleButton" }, inner_text: "Hours"  },
                  item_wrapper_class: 'tag-item',
                  collection: Slot.where(product_id: @product),
                  label_method: :start_time,
                  label:"Hours"
                  %>
          </div>

        <div class="d-flex justify-content-end mt-4">
          <%= f.submit "Submit",
                class: "btn btn-light ",
                data: { toggle_target: "bookButton"}%>

        </div>
          <% end %>

      </div>

    </div>
  </div>




</div>
