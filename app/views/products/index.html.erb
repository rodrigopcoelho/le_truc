<h1 class="bg-info">NAV BAR HERE</h1>

<div class="index-container">

  <div class="icons-container">
      <div class="icon-card">
        <i class="fa-solid fa-border-all fa-2xl"></i>
        <p>All</p>
      </div>
      <div class="icon-card">
        <i class="fa-solid fa-table-tennis-paddle-ball fa-2xl"></i>
        <p>Leisure</p>
      </div>
      <div class="icon-card">
        <i class="fa-solid fa-utensils fa-2xl"></i>
        <p>Lunch</p>
      </div>
      <div class="icon-card">
        <i class="fa-solid fa-laptop-code fa-2xl"></i>
        <p>Work</p>
      </div>
  </div>

  <div class="product-card-container">
    <% @products.each do |product| %>

      <%= link_to product_path(product.id) do %>
        <div class="product-card">

          <div class="product-content">
            <%= cl_image_tag product.photo.key, crop: :fill %>

            <div class="product-card-body">
              <h5><%= product.name %></h5>
              <div class="card-details">
                <p><%= product.price %> <i class="fa-solid fa-coins fa-lg"></i></p>
                <%= link_to "Rent!", products_path, class:"btn-rent" %>
              </div>
            </div>

          </div>

        </div>
      <% end %>
    <% end %>
  </div>

</div>
<h6 class="bg-info">FOOTER HERE</h6>

