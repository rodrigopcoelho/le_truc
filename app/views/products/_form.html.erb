<div class="d-flex align-items-center justify-content-center bg-dark">

  <div class="d-flex d-flex align-items-center justify-content-center my-5 flex-column">

    <div class="glasscard d-flex flex-column">
      <h2 class="text-center display-6 pb-3">Product</h2>

      <%= simple_form_for(product) do |f| %>
        <div class="form-inputs">
          <%= f.input :name,
                      autofocus: true %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :category, collection: Product::CATEGORIES %>
          <%= f.input :photo %>
        </div>

        <div class="form-actions btn-red mt-5 text-center">
          <%= f.button :submit, "Save Product"%>
        </div>

      <% end %>

    </div>
  </div>
</div>
